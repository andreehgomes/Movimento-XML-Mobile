<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fundoClaro"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/codigo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@android:color/system_notification_accent_color"
        android:gravity="right|center_horizontal|fill_vertical"
        android:padding="5dp"
        android:text="1ยบ"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@android:color/system_notification_accent_color"
        android:gravity="center_horizontal|left|fill_vertical"
        android:padding="5dp"
        android:text="PALMEIRAS"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/estoque"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:background="@android:color/system_notification_accent_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="10000"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

</LinearLayout>